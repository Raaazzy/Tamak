@model Tamak.Data.Models.Product

<div class="col">
    <div class="card shadow-sm">
        <img class="bd-placeholder-img card-img-top" width="100%" height="225" role="img" preserveAspectRatio="xMidYMid slice" focusable="false" src="@Model.Img" />
        <div class="card-body">
            <h3 class="fs-2">@Model.Name</h3>
            <p class="text-body-secondary">@Model.Description</p>
            <div class="d-flex justify-content-between align-items-center">
                <p class="card-text">@Model.Price.ToString("c")</p>
                <div class="btn-group">
                    <button type="button" class="btn btn-sm btn-outline-primary">Добавить</button>
                </div>
            </div>
        </div>
    </div>
</div>